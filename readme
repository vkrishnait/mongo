cat mongo-express.yml
...
....


---
apiVersion: v1
kind: Service
metadata:
 name: mongo-express-service
spec:
 selector:
   app: mongo-express
 type: LoadBalancer
 ports:
  - protocol: TCP
    port: 8081
    targetPort: 8081
    nodePort: 30000

k apply -f mongo-express.yml
deployment.apps/mongo-express unchanged
service/mongo-express-service created

