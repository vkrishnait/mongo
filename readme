step:1
++++++++

cat secret.yml
apiVersion: v1
kind: Secret
metadata:
 name: mongodb-secret
type: Opaque
data:
  mongo-username: dXNlcm5hbWU=
  mongo-password: cGFzcw==

k apply -f secret.yml
k get secret

step:2
++++++

cat mongo-db.yml
apiVersion: apps/v1
kind: Deployment
metadata:
    name: mongodb-deployment
    labels:
     app: mongodb
spec:
 replicas: 2
 selector:
  matchLabels:
     app: mongodb
 template:
     metadata:
       labels:
        app: mongodb
     spec:
      containers:
       - name: mongodb
         image: mongo
         ports:
          - containerPort: 27017
         env:
          - name: MONGO_INITDB_ROOT_USERNAME
            valueFrom:
              secretKeyRef:
                name: mongodb-secret
                key: mongo-username
          - name: MONGO_INITDB_ROOT_PASSWORD
            valueFrom:
               secretKeyRef:
                 name: mongodb-secret
                 key: mongo-password

k apply -f mongo-db.yml
k get deployment
k get rs
k get pod -w

$ k get pod -o wide
NAME                                  READY   STATUS    RESTARTS   AGE     IP           NODE       NOMINATED NODE   READINESS GATES
